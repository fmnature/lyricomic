<% comments.each do |comment| %>
  <div class="comment">
    <div class="comment-left">
      <%= image_tag(comment.user.image.url, class: "icon-mini") %>
    </div>
    
      <strong><%= link_to comment.user.nickname, "/users/#{comment.user_id}", remote: true %>：</strong>
      
      <%= comment.content %>

    <% if user_signed_in? && current_user.id == comment.user_id %>
      <%= link_to '削除', lyric_comment_path(comment.lyric.id,comment.id), method: :delete, remote: true %>
    <% end %>
  </div>
<% end %>